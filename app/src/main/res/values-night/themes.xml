<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Admin" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryVariant">@color/purple_500</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Admin.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimaryDark">@color/green</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="Theme.Admin.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Admin.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AnimationForDialog">
        <item name="android:windowExitAnimation">@anim/zoom_out</item>
        <item name="android:windowEnterAnimation">@anim/zoom_in</item>
    </style>

    <style name="CustomAppTheme" parent="Theme.AppCompat">
        <item name="android:textColorPrimaryDisableOnly">#EEC7CDCD</item>
        <item name="colorAccent">@color/teal_700</item>
    </style>

</resources>